<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_blue"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/sub_orange"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/registerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Info"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_register"
                android:backgroundTint="@color/dark_white"
                android:hint="Full Name"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_register"
                android:backgroundTint="@color/dark_white"
                android:hint="Address"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_register"
                android:backgroundTint="@color/dark_white"
                android:hint="Gender"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/approxWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_register"
                android:backgroundTint="@color/dark_white"
                android:hint="Approximate Weight"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/approxHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_register"
                android:backgroundTint="@color/dark_white"
                android:hint="Approximate Height"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/main_blue"
                android:text="Continue"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Already have an account? Login here"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
